<% if @posts.empty? %>
  <div> There is no post</div>
<% else %>
  <% for post in @posts %>
    <div class ="post", id = "post"+<%= post.id %> >
      <div class="title">
        <h1><%= link_to h(post.title), post_path(post) %></h1>
        <span class="created">on
          <%= post.created_at.strftime("%m-%d-%Y") %>
        </span>
      </div>
      <div class="edit_del">
      <% if session[:user_id] %>
        <% if is_admin? || post.user.id == current_user.id %>
          <%= link_to "edit /", edit_post_path(post) %>
          <%= link_to "delete", post_path(post), :method => :delete, :confirm => 'Are you sure?' %>
        <% end %>
      <% end %>
      </div>
      <div class="postcontent">
        <%= truncate(post.content, 500) %>
      </div>
      <div class="author">posted by
        <%= link_to post.user.name, user_path(post.user.username)%>
      </div>
      <div class="tags">Tags:
        <% for tag in post.tags %>
          <%= link_to tag.name, tag_path(tag) %>
        <% end %>
      </div>
      <div class="no_of_comment">
        <%= link_to "#{post.comments.size} comments", post_path(post) %>
      </div>
    </div>
  <% end %>
<% end %>

