<div class = 'post'>
  <div class='title'>
    <h1><%= h(@post.title) %></h1>
  </div>
  <div class="created">on
    <%= @post.created_at.strftime("%B %d, %Y") %> 
    by <%= link_to @post.user.username, user_path(@post.user.username)%>
  </div>
  <div class="edit_del">
    <% if session[:user_id] %>
      <% if is_admin? || @post.user.id == current_user.id %>
        <%= link_to "edit", edit_admin_post_path(@post) %> / 
        <%= link_to "delete", admin_post_path(@post), :method => :delete,
                                               :confirm => 'Are you sure?' %>
      <% end %>
    <% end %>
  </div>
  <div class="postcontent">
    <%= @post.content %>
  </div>
  <div class="tags">Tags:
    <% if !@post.tags.empty? %>
      <% for tag in @post.tags %>
        <%= link_to tag.name, tag_path(tag.name) %>
      <% end %>
    <% end %>
  </div>
  <div class = "no_of_comment" id = "comment">
    <%= @post.accepted_comments.size %> no of comments
  </div>
</div>
  <%= textilize("h2. Comments") %>
  <% if @comments %>
    <% for comment in @comments %>
      <div class = 'comment' id='comment-<%= comment.id %>' >
        <div class="created">
          <h3><%= comment.author %></h3> on
          <%= @post.created_at.strftime("%B %d, %Y") %> 
        </div>
        <%= textilize(comment.content) %>
        <% if session[:user_id] %>
          <%= textilize("by **"+comment.author+"**\n") %>
        <% end %>
        <% if !comment.author_url.empty? %>
          <h3><%= textilize("Website: _"+comment.author_url+"_\n") %><h3>
        <% end %>
        <% if session[:user_id] %>
          <%= textilize("Email: _"+comment.email+"_\n") %>
        <% end %>
        <% if @change_status == true %>
          <div id='status-<%= comment.id %>' >
            <%= link_to_remote comment.comment_status, :url => accept_post_comment_path(@post, comment) %>
          </div>
          <%= link_to_remote "Delete", :url => post_comment_path(@post, comment), :method => :delete, :confirm => 'Are you sure?' %>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <div class="postcomment">
  <h3> Leave a comment </h3>  
    <div class = 'error' id='comment_errors'></div>
      <% remote_form_for [@post, @comment], :html => { :id => 'comment_form' } do |f| %>
        <%= hidden_field(:comment, :commentable_type) %>
        <%= hidden_field(:comment, :commentable_id) %>
        <div class ="divitem">Comment:</div>
          <div class ="divfield"><%= f.text_area :content, :rows => 10, :cols => 50 %></div>
        <div class ="divitem">Your name:</div>
          <div class ="divfield"><%= f.text_field :author %></div>
        <div class ="divitem">Website:</div>
          <div class ="divfield"><%= f.text_field :author_url %></div>
        <div class ="divitem">Email:</div>
          <div class ="divfield"><%= f.text_field :email %></div>
        <div class ="divitem"><%= f.submit 'post' %></div>
      <% end %>
  </div>

