<html>
  <head>
    <%= stylesheet_link_tag "blogging_app", :media => "all" %>
    <%= javascript_include_tiny_mce_if_used %>
    <%= tiny_mce if using_tiny_mce? %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body id="application">
    <div id="heading">
      <div id="back_dashboard">
        <% if session[:user_id] %>
          <%= link_to "Logout", logout_url %> / 
          <%= link_to "Dashboard", dashboard_path %><br/>
        <% else %>
          <%= link_to "Login", login_url %>
        <% end %>
      </div>
      <h1> <%= link_to "Surat's Blog", posts_path %> </h1></div>
    <div id="main">
      <div id="flash">
        <%= flash[:msg] %>
      </div>
      <%= yield :layout %>
    </div>
    <div id="tags">
      <%= render(:partial => "shared/tag_cloud") %>
    </div>
    <div id="footer">
      Surat Blog &#169 2008
    </div>
  </body>
</html>
