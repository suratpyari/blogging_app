<html>
  <head>
    <%= stylesheet_link_tag "blogging_app", :media => "all" %>
    <%= javascript_include_tiny_mce_if_used %>
    <%= tiny_mce if using_tiny_mce? %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body id="application">
    <div id="heading"><h1>Surat's Blog</h1></div>
    <div id="main">
      <div id="flash">
        <%= flash[:msg] %>
      </div>
      <%= yield :layout %>
    </div>
    <div id="ad">
      advertisements<br />
    </div>
    <div id="tags">
      Tags:<br />
      <ul>
      <% for tag in tags %>
        <li><%= link_to tag.name, tag_path(tag) %><br /></li>
      <% end %>
      <ul>
    </div>
    <div id="footer">
      <% if session[:user_id] %>
        <%= link_to "logout", session_path, :method => :delete %>
      <% else %>
        <%= link_to "login", new_session_path %>
      <% end %>
    </div>
  </body>
</html>
