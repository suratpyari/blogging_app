<html>
  <head>
    <%= stylesheet_link_tag "blogging_app", :media => "all" %>
    <%= javascript_include_tiny_mce_if_used %>
    <%= tiny_mce if using_tiny_mce? %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body id="application">
    <div id="heading">
      <% if session[:user_id] %>
        <div id="back_dashboard">
          <%= link_to "back to dashboard", admin_base_index_path %><br/>
        </div>
      <% end %>
      <h1> <%= link_to "Surat's Blog", posts_path %> </h1></div>
    <div id="main">
      <div id="flash">
        <%= flash[:msg] %>
      </div>
      <%= yield :layout %>
    </div>
    <div id="tags">
      Tags:<br />
      <ul>
      <% for tag in tags %>
        <li><%= link_to tag.name, tag_path(tag.name) %><br /></li>
      <% end %>
      <ul>
    </div>
    <div id="footer">
      <% if session[:user_id] %>
        <%= link_to "logout", logout_url %>
      <% else %>
        <%= link_to "login", login_url %>
      <% end %>
    </div>
  </body>
</html>
