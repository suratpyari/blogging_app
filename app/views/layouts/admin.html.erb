<html>
  <head>
    <%= stylesheet_link_tag "blogging_app", :media => "all" %>
    <%= javascript_include_tiny_mce_if_used %>
    <%= tiny_mce if using_tiny_mce? %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body id="admin">
    <div id="heading"><h1>Surat's Blog</h1></div>

      <ul id="navbar">
        <li><%= link_to "logout", session_path, :method => :delete %> </li>
        <li id = <%= current('users') %> ><%= link_to "Users", admin_users_path %></li>
        <li id = <%= current('posts') %>><%= link_to "Posts", posts_path %></li>      
        <li id = <%= current('tags') %>><%= link_to "Tags", tags_path %></li>
      </ul>
      <div id="notext"></div>

    <div id="flash">
      <%= flash[:msg] %>
    </div>
    <div id="main">
      <%= yield :layout %>
    </div>
  </body>
</html>
