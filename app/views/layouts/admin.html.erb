<html>
  <head>
    <%= stylesheet_link_tag "blogging_app", :media => "all" %>
    <%= javascript_include_tiny_mce_if_used %>
    <%= tiny_mce if using_tiny_mce? %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body id="admin">
    <div id="heading"><h1> <%= link_to "Surat's Blog", admin_base_index_path %> </h1></div>

      <ul id="navbar">
        <li id = <%= current('base') %> ><%= link_to "Dashboard", dashboard_path %></li>
        <li id = <%= current('users') %> ><%= link_to "Users", admin_users_path %></li>
        <li id = <%= current('posts') %> ><%= link_to "Posts", admin_posts_path %></li>
        <li id = "logout"><%= link_to "logout", logout_path %> </li>
      </ul>
      <div id="notext"></div>

    <div id="flash">
      <%= flash[:msg] %>
    </div>
    <div id="main">
      <%= yield :layout %>
    </div>
  </body>
</html>
